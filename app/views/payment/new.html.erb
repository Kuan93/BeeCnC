
<h1>Payment#new</h1>
<p>Find me in app/views/payment/new.html.erb</p>

<div class="credit-card-form">

	<%= form_for :checkout_form, url: braintree_check_out_path, html: {id:"checkout-form"} do |f|%>

	  <div id="error-message"></div>

	  <div id="dropin-container"></div>

	  <%= f.label :card_number, "Card Number"%>
	  <div class="hosted-field" id="card-number"></div>

	  
	  <%= f.label :cvv, "CVV"%>
	  <div class="hosted-field" id="cvv"></div>

	  <%= f.label :expiration_date, "Expiration_date"%>
	  <div class="hosted-field" id="expiration-date"></div>

	  <%= f.hidden_field "payment_method_nonce" %>
		<%= f.submit "ONLY $10.00", disabled: true, class: "btn btn-primary", id: "submit-payment"%>

	<% end %>

</div>

	 <script src="https://js.braintreegateway.com/web/3.3.0/js/client.min.js"></script>

